
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Produtos</title>
</head>
<body>
   <table>
       <thead>
           <tr>
               <th>Id</th>
               <th>Nome</th>
               <th>Preco</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var produto in ViewBag.Produtos)
           {
               <tr>
                   <td>@produto.Id</td>
                   <td>@produto.Nome</td>
                   <td>@produto.Preco</td>
               </tr>
           }
       </tbody>
   </table>
</body>
</html>
