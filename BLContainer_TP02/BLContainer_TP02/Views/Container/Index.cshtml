@model IList<BLContainer_TP02.Models.Container>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Containers</title>
</head>
<body> 
    <h2>Lista de Container</h2>
    <a class="btn btn-primary" href="@Url.Action("Form", "Container")">
        Novo
    </a>
    <br/>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>EDITAR</th>
                <th>NÚMERO</th>
                <th>TIPO</th>
                <th>TAMANHO</th>
                <th>BL</th>
                <th>APAGAR</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var container in Model)
                {
                    <tr>
                        <td>
                            <a class="btn-default"><span class="glyphicon glyphicon-edit"></span></a>
                        </td>
                        <td>@container.Numero</td>
                        <td>@container.Tipo</td>
                        <td>@container.Tamanho</td>
                        <td>@Html.ActionLink(container.Bl.Numero, "BLContainer", new { id = container.Bl.Id })</td>
                        <td><a href="@Url.Action(container.Id.ToString(), "ApagarContainer", new { id = container.Id})" class="btn-danger"><span class="glyphicon glyphicon-remove"></span></a></td>
                    </tr>
                } 
            }
                    </tbody>
    </table>
</body>
</html>

